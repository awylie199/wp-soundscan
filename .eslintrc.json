{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "jQuery": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended"
    ],
    "plugins": [],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "eol-last": ["error", "always"],
        "object-curly-spacing": ["error", "never"],
        "semi": ["error", "always"],
        "space-before-blocks": ["error", "always"],
        "arrow-spacing": ["error", {
            "before": true,
            "after": true
        }],
        "keyword-spacing": ["error", {
            "before": true,
            "after": true
        }]
    }
}